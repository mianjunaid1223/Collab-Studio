
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile and public profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Projects can be read by anyone
    // Projects can be created by any authenticated user
    // Projects can only be updated by their creator (future-proofing)
    match /projects/{projectId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth.uid == resource.data.createdBy;
    }

    // Pixels can be read by anyone
    // Pixels can be placed by any authenticated user
    match /projects/{projectId}/pixels/{pixelId} {
        allow read: if true;
        allow create, update: if request.auth != null;
    }
  }
}
